<h1><%=  @cocktail.name %></h1>

<%= cl_image_tag @cocktail.photo.key, width: 150, height: 150, crop: :thumb %>

<ul>
<% @cocktail.doses.each do |dose| %>
  <li> <%= dose.ingredient.name %> </li>
  <ul>

    <li> <%= dose.description %> </li>
  </ul>
    <%= link_to 'Delete', dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
</ul>

